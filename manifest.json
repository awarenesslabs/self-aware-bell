{
  "manifest_version": 2,

  "name": "Mindfulness bell",
  "description": "This extension allows the user to be aware.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Mindfulness Bell"
  },
  
  "background" : {
    "scripts": ["eventPage.js"],
    "persistent": false //TODO - might need to set to true
  },

  "permissions": ["alarms", "notifications", "storage"]
}
